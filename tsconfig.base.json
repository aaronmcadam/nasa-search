{
  "compileOnSave": false,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nasa-search/feature-files": ["libs/feature-files/src/index.ts"],
      "@nasa-search/orion": ["libs/orion/src/index.ts"],
      "@nasa-search/shared-testing": ["libs/shared-testing/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
